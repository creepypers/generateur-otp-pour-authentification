<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Validateur OTP Sécurisé" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Border Background="White"
                    BorderBrush="#BDC3C7"
                    BorderThickness="2"
                    CornerRadius="5"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="🔑 OTP SERVEUR" 
                             FontSize="20" 
                             Margin="0 0 0 15"
                             Foreground="#2C3E50" TextAlignment="Center"/>
                    
                    <TextBox Name="txtInput" 
                             FontSize="18" 
                             Padding="10" 
                             Margin="0 0 0 15"
                             BorderBrush="#BDC3C7"
                             BorderThickness="2"
                             Foreground="#2C3E50"
                             MaxLength="8"
                             TextAlignment="Center"/>
                    
                    <Button Content="VALIDER" 
                            Click="BtnValidate_Click" 
                            Padding="15 8"
                            Background="#27AE60"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <TextBlock Name="txtResult" 
                             FontSize="16" 
                             Margin="0 10"
                             Foreground="#7F8C8D"
                             TextWrapping="Wrap"/>
                    
                    <Border Background="#F8F9FA"
                            Padding="10" 
                            Margin="0 15 0 0">
                        <TextBlock Name="txtPrevious" 
                                 FontSize="14" 
                                 Foreground="#7F8C8D"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>