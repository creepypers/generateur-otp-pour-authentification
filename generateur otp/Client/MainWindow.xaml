<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client OTP Sécurisé" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="🔒 OTP CLIENT" 
                         FontSize="20" 
                         Margin="0 0 0 15"
                         Foreground="#2C3E50" TextAlignment="Center"/>
                
                <Border Background="White"
                        BorderBrush="#BDC3C7"
                        BorderThickness="2"
                        CornerRadius="5"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Name="txtOTP" 
                                 FontSize="42" 
                                 FontWeight="Bold"
                                 FontFamily="Consolas"
                                 Foreground="#2C3E50"
                                 Margin="0 10"
                                 TextAlignment="Center"
                                 HorizontalAlignment="Center"/>
                        
                        <Button Content="COPIER" 
                                Click="BtnCopy_Click"
                                Padding="15 8"
                                Background="#27AE60"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0 10 0 0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>

                <TextBlock Name="txtTimer" 
                         FontSize="16" 
                         Margin="0 20 0 0"
                         Foreground="#7F8C8D"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>